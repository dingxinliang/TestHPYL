@{
    ViewBag.Title = "Order";
}
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        
        <li class="active"><a>分销订单业绩</a></li>
        <li><a href="@Url.Action("Product")">商品分销明细</a></li>
    </ul>

    <div class="search-box">
        <div class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">订单编号</label>
                <input type="text" id="orderid" class="form-control input-ssm input-number">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">订单状态</label>
                <select class="form-control input-ssm" id="ordstate">
                    <option value="">全部</option>
                    <option value="3">待收货</option>
                    <option value="4">已关闭</option>
                    <option value="5">已完成</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">订单时间</label>
                <input class="form-control input-ssm start_datetime" id="stime" type="text">
                <label class="label-inline-line">-</label>
                <input class="form-control input-ssm end_datetime" id="etime" type="text">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">销售员</label>
                <input type="text" class="form-control input-ssm" id="sales" autocomplete="off">
            </div>

            <div class="form-group">
                <label class="label-inline w75" for="">结算状态</label>
                <select class="form-control input-ssm" id="ststate">
                    <option value="">全部</option>
                    <option value="1">已结算</option>
                    <option value="0">未结算</option>
                </select>
            </div>
            <div class="form-group">
                <button id="searchBtn" class="btn btn-primary btn-sm" type="button">搜 索</button>
            </div>
        </div>
    </div>

    <div>
        <table class="table" id="list"></table>
    </div>
</div>
<script src="~/Areas/SellerAdmin/Scripts/DistributionFeatOrder.js"></script>