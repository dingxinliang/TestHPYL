            fromLatLng: latLng.split(',')[0].trim() + ',' + latLng.split(',')[1].trim(), url: "InitRegion"
        }
        $.ajax({
            type: "GET",
            url: queryData.url,
            data: queryData,
            async: false,
            dataType: "json",
            success: function (data) {
                var fullPath = data.fullPath;//省，市，区，县 :1812,1813,1814,27074
                var showCity = data.showCity;
                var street = data.street;
                $("#showCity").val(showCity);
                $("#showStreet").val(street);
                name = getNewAddress(name, showCity, street);// 过滤掉选择地址中的省市区街道
                $("#txtKeyWord").val(name);
                if (fullPath != '') {
                    var arr = fullPath.split(',');
                    if (arr.length >= 3) {
                        proId = arr[0]; cityId = arr[1]; districtId = arr[2];
                    }
                    if (arr.length >= 4) {
                        streetId = arr[3];
                    }
                }
                console.log("fullPath: " + fullPath);
                //初始化街道组合,这里要优化！！！！
                var temp;
                var proIndex = 0, cityIndex = 0, districtIndex = 0;
                temp = province.filter(function (a, index) {
                    if (a.Id == proId) {
