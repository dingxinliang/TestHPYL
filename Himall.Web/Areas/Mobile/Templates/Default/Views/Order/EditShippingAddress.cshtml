        };
        var hdLongitude = $("#Longitude").val();
        var hdLatitude = $("#Latitude").val();
        if (id) {
            $.post(editShippingAddressUrl, { id: id, RegionId: region_Id, Address: address, AddressDetail: buildingInfo, Phone: phone, ShipTo: shipTo, Longitude: hdLongitude, Latitude: hdLatitude }, function (result) {
