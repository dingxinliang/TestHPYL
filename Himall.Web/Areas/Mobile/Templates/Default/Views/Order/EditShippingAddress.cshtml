    function saveAddress(id, region_Id, shipTo, address, phone, buildingInfo, callBack) {
        id = (parseInt(id) == 0) ? '' : parseInt(id);

        var cacheValue = {
            id: id,
            shipTo: shipTo,
            phone: phone,
            regionFullName: null,
            address: address,
