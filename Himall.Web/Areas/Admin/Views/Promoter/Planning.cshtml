@model Himall.Model.RecruitPlanInfo
<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<script src="~/Scripts/jquery.zclip.js"></script>
<script src="~/Areas/Admin/Scripts/PromoterPlanning.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">

        <li><a href="@Url.Action("Management")">销售员列表</a></li>
        <li class="active"><a>招募计划设置</a></li>
        <li><a href="@Url.Action("Setting")">招募审核开关</a></li>
    </ul>
    <div class="form-horizontal">
        @using (Html.BeginForm("SavePlanning", "Promoter", FormMethod.Post))
        {
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label"><b>*</b>标题：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-sm-3">
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "help-default cor-red" })
                    </div>
                </div>
            <div class="form-group">
                <label for="" class="col-sm-2 control-label">详情描述：</label>
                <div class="col-sm-9">
                    <textarea maxlength="2000" id="Content" name="Content">
                        @if (Model != null)
                        {@Model.Content }
                    </textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="">链接：</label>
                <div class="col-sm-9">
                    <div class="form-group col-xs-10">
                        <p class="form-control-static" style="overflow:hidden;">@ViewBag.Url</p>
                    </div>
                    <span class="btn btn-link" id="copyurlbt" data-url="@ViewBag.Url">复制</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="">二维码：</label>
                <div class="col-sm-9">
                    <p class="form-control-static"><img src="@ViewBag.QRCode" width="300" height="300"></p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-9">
                    <button type="button" onclick="Post()" id="btsubmit" class="btn btn-primary">保 存</button>
                </div>
            </div>
        }
    </div>
</div>
