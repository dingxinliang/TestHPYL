<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>

<div class="container Sclear-N2">
    <ul class="nav nav-tabs-custom clearfix">

        <li class="active"><a href="@Url.Action("Management")">分销列表</a></li>
        <li><a href="@Url.Action("Share")">微信分享设置</a></li>
        <li><a href="@Url.Action("Setting")">分销板块开关</a></li>
    </ul>
    <div class="search-box" id="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">商品名称</label>
                <input class="form-control input-ssm" type="text" id="ProductName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">商家名称</label>
                <input class="form-control input-ssm" type="text" id="ShopName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">分销状态</label>
                <select class="form-control input-ssm" id="Status">
                    <option value="-1" selected>所有状态</option>
                    @foreach (var d in Himall.Core.EnumHelper.ToDescriptionDictionary<Himall.Model.ProductBrokerageInfo.ProductBrokerageStatus>())
                    {
                        <option value="@d.Key">@d.Value</option>
                    }
                </select>
            </div>
            <div class="form-group"><button type="button" class="btn btn-primary btn-sm" id="searchBtn">搜 索</button></div>
            <div class="form-group"><a class="btn btn-default btn-sm" id="QCodeBtn"><i class="glyphicon"></i>分销市场二维码</a></div>
        </form>
    </div>

    <table id="list" class="table"></table>
    <div class="qcover" style="display:none;">
        <div class="qcodeinfo">
            <p>该页可浏览和分享您的分销商市场。<br><strong style="color:red;">请使用微信扫描该二维码</strong></p>
            <img src="@(ViewBag.ShopQCode)" />
            <p>链接地址：<a href="@(ViewBag.ShopQUrl)" target="_blank" id="qlink">@(ViewBag.ShopQUrl)</a>&nbsp;<span id="bt_copyurl">复制链接</span></p>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.zclip.js"></script>
<script src="~/Areas/Admin/Scripts/DistributionManagement.js"></script>

