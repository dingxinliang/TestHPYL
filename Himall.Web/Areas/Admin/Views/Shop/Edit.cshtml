@model Himall.Web.Models.ShopModel
@using Himall.Core;
@{
    ViewBag.Title = "Edit";
    string AllBusinessLicenseCert = "";
    List<string> BusinessLicenseCertlist = new List<string>();
    string AllProductCert = "";
    List<string> ProductCertlist = new List<string>();
    string AllOtherCert = "";
    List<string> OtherCertlist = new List<string>();

    for (int i = 1; i < 4; i++)
    {
        if (HimallIO.ExistFile(Model.BusinessLicenseCert + string.Format("{0}.png", i)))
        {
            BusinessLicenseCertlist.Add(HimallIO.GetImagePath(Model.BusinessLicenseCert + string.Format("{0}.png", i)));
        }
        if (HimallIO.ExistFile(Model.ProductCert + string.Format("{0}.png", i)))
        {
            ProductCertlist.Add(HimallIO.GetImagePath(Model.ProductCert + string.Format("{0}.png", i)));
        }
        if (HimallIO.ExistFile(Model.OtherCert + string.Format("{0}.png", i)))
        {
            OtherCertlist.Add(HimallIO.GetImagePath(Model.OtherCert + string.Format("{0}.png", i)));
        }
    }
    AllBusinessLicenseCert = string.Join(",", BusinessLicenseCertlist);
    AllProductCert = string.Join(",", ProductCertlist);
    AllOtherCert = string.Join(",", OtherCertlist);
}
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css">
