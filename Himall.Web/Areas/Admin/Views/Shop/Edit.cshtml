<script type="text/javascript">
    var bankRegionIds = "@ViewBag.BankRegionIds";
    var companyRegionIds = "@ViewBag.CompanyRegionIds";

    $(function () {
        $("#Name").focus();
        var oldStatus = "@ViewBag.Status";
        $('input[name="Status"]').val(oldStatus);
        $("input#statusCheckbox").click(function () {

            var status = $(this).attr('status');

            if ($(this).attr('checked') == 'checked') {
                $(this).val(status);
                $('input[name="Status"]').val(status);
            } else {
                $(this).val(oldStatus);
                $('input[name="Status"]').val(oldStatus);
            }
        });

        $(".form_datetime").datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd',
            autoclose: true,
            weekStart: 1,
            minView: 2
        });

        $('#BusinessLicenseCert').hishopUpload({
            title: '<b>*</b>经营许可类证书：',
            imageDescript: '请确保图片清晰，(最多三张)。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(AllBusinessLicenseCert))',
            imgFieldName: "BusinessLicenseCert",
            imagesCount: 3,
            dataWidth: 10
        });

        $('#ProductCert').hishopUpload({
            title: '<b>*</b>产品类证书：',
            imageDescript: '请确保图片清晰，(最多三张)。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(AllProductCert))',
            imgFieldName: "ProductCert",
            imagesCount: 3,
            dataWidth: 10
        });

        $('#OtherCert').hishopUpload({
            title: '<b>*</b>其它证书：',
            imageDescript: '请确保图片清晰，(最多三张)。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(AllOtherCert))',
            imgFieldName: "OtherCert",
            imagesCount: 3,
            dataWidth: 10
        });

        $('#BusinessLicenceNumberPhoto').hishopUpload({
            title: '<b>*</b>营业执照号<br>电子版：',
            imageDescript: '请确保图片清晰。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(Model.BusinessLicenceNumberPhoto))',
            imgFieldName: "BusinessLicenceNumberPhoto",
            dataWidth: 10
        });

        $('#OrganizationCodePhoto').hishopUpload({
            title: '<b>*</b>组织机构代码证<br>电子版：',
            imageDescript: '请确保图片清晰。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(Model.OrganizationCodePhoto))',
            imgFieldName: "OrganizationCodePhoto",
            dataWidth: 10
        });

        $('#GeneralTaxpayerPhot').hishopUpload({
            title: '<b>*</b>一般纳税人证明：',
            imageDescript: '请确保图片清晰。',
            displayImgSrc: '@(Himall.Core.HimallIO.GetImagePath(Model.GeneralTaxpayerPhot))',
            imgFieldName: "GeneralTaxpayerPhot",
            dataWidth: 10
        });



    });
</script>

